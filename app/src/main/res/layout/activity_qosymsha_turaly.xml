<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QosymshaTuralyActivity"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/onim"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <RelativeLayout
            android:id="@+id/bagalau"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/suzgi_layout_top">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/star"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="@string/bagalau"
                style="@style/zheke_kab_txt"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dostarmen_bolisu"
            style="@style/information_layout">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/bolisu"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="@string/dostarmen_bolisu"
                style="@style/zheke_kab_txt"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/komek"
            style="@style/information_layout">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/question"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="@string/usynystar"
                style="@style/zheke_kab_txt"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/zhobaga_qooldau_korsetu"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/suzgi_layout_bottom">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/help"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="@string/zhobaga_qooldau_korsetu"
                style="@style/zheke_kab_txt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/color_write"
                android:text="···"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="v.1.0"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_write"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_telegramm"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/telegram"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/img_instagramm"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/instagram"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/qosymsha_turaly"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>