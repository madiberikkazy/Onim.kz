<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_dostar_tabu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_satushy_product"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/img"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_satushy_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/main_color"
            android:textSize="15dp"
            android:layout_marginLeft="120dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_satushy_product_aimaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аймақ"
            android:textColor="@color/color_write"
            android:textSize="12dp"
            android:layout_marginLeft="120dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/txt_satushy_product_uaqyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00.0000"
            android:textColor="@color/color_write"
            android:textSize="12dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentBottom="true" />
        <ImageView
            android:id="@+id/like"
            android:layout_width="15dp"
            android:layout_height="12.2dp"
            android:src="@drawable/heart"
            android:layout_toRightOf="@id/txt_satushy_product_uaqyt"
            android:layout_alignParentBottom="true"
            android:alpha="0.6"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txt_satushy_product_liktary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/color_write"
            android:text="15"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/like"/>
        <ImageView
            android:id="@+id/img_heart"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:src="@drawable/heart"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/txt_satushy_product_baga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="0"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text=" ₸"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>