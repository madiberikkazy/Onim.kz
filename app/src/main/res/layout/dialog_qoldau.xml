<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:background="@color/white">
           <LinearLayout
               android:id="@+id/img_kaspi"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:src="@drawable/kaspi"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Kaspi.kz"
                   android:textSize="15dp"
                   android:textColor="@color/black"
                   android:layout_toRightOf="@id/img_kaspi"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="5dp"/>
           </LinearLayout>
           <TextView
               android:id="@+id/txt_muqtaj"
               android:layout_below="@id/img_kaspi"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="12dp"
               android:layout_marginTop="5dp"
               android:text="@string/txt_muqtaj"/>
           <TextView
               android:id="@+id/txt_qoldau"
               android:layout_below="@id/txt_muqtaj"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="12dp"
               android:layout_marginTop="5dp"
               android:text="@string/txt_qoldau"/>
           <TextView
               android:layout_below="@id/txt_qoldau"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="15dp"
               android:layout_marginTop="5dp"
               android:text="Мәди Б."/>
           <ImageView
               android:id="@+id/img_copy"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/copy"
               android:layout_below="@id/txt_qoldau"
               android:layout_marginTop="5dp"
               android:layout_alignParentRight="true"/>
           <TextView
               android:layout_below="@id/txt_qoldau"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="15dp"
               android:layout_marginTop="5dp"
               android:layout_toLeftOf="@id/img_copy"
                android:layout_marginRight="10dp"
               android:text="4400 4302 1749 45 22"/>

       </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>